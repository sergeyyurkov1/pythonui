Default {
  /* background: black; */
}

#monitoring-button-test-container {
  row-span: 1;
  column-span: 2;
}

Sparkline {
  width: 100%;
  margin: 2;
}

Label {
  padding: 1 2;
  height: 100%;
  color: auto;
}

#about {
  width: 100%;
  height: 100%;
  text-align: center;
}

Grid {
  grid-size: 2 3; /* c r */
  align: center middle;
}

.commands-container {
  align: center middle;
}
.commands-horizontal {
  height: auto;
  width: auto;
}
